<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewResultDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textSize="54sp"
        android:text=""
        android:paddingHorizontal="15dp"
        android:gravity="bottom|end"
        android:textColor="@color/main_blue"/>
    <TextView
        android:id="@+id/textViewOperationDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text=""
        android:textSize="32sp"
        android:paddingHorizontal="15dp"
        android:gravity="center|end"
        android:textColor="@color/main_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/percentButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/openParenthesisButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/closeParenthesisButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/divisionButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="รท"
            android:background="@color/main_blue"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sevenButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/eightButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/nineButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/multiplicationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x"
            android:background="@color/main_blue"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fourButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/fiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/sixButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/subtractionButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="รท"
            android:background="@color/main_blue"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/oneButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/twoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/threeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/additionButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="@color/main_blue"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/zeroButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/decimalPointButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/backspaceButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="โซ"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/main_blue"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/resultButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="@color/orange"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_margin="2dp"/>
    </LinearLayout>

</LinearLayout>